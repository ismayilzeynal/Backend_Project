@using BackendProject.DAL;
@using BackendProject.Helpers

@model PaginationVM<Blog>
@{
    ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Items)
            {
                
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-blog mb-60">
                        <div class="blog-img">
                            <a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id"><img src="~/img/blog/@item.ImageUrl" alt="blog"></a>
                            <div class="blog-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>By @item.AuthorName  /  @item.CreatedDate.ToString("MMMM d, yyyy")  /  <i class="fa fa-comments-o"></i> @item.Comments.Count </p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id">@item.Title</a></h2>
                                <a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            

        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="pagination">
                    <ul>
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            <li class="page-item @(Model.CurrentPage==i? "disabled": "")">
                                <a class="page-link" asp-action="index" asp-route-page="@i" tabindex="-1">@i</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
