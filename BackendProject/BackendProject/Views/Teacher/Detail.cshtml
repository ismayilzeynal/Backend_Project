@model TeacherDetailVM
@{
    ViewData["Title"] = "Detail";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>teachers / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-details-area pt-150 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="teacher-details-img">
                    <img src="~/img/teacher/@Model.Teacher.ImageUrl" alt="teacher">
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="teacher-details-content ml-50">
                    <h2>@Model.Teacher.FullName</h2>
                    <h5>@Model.Teacher.Title</h5>
                    <h4>about me</h4>
                    <p>@Model.Teacher.Desc</p>
                    <ul>
                        <li><span>degree: </span>@Model.Teacher.Degree</li>
                        <li><span>experience: </span>@Model.Teacher.Experience</li>
                        <li><span>hobbies: </span>@Model.Teacher.Hobbies</li>
                        <li><span>faculty: </span>@Model.Teacher.Faculty</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>
                    <p><span>mail me : </span>@Model.Contacts.Email</p>
                    <p><span>make a call : </span>@Model.Contacts.Phone</p>
                    <p><span>skype : </span> @Model.Contacts.Skype</p>
                    <ul>
                        <li><a href="@Model.Contacts.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                        <li><a href="@Model.Contacts.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                        <li><a href="@Model.Contacts.Vimeo"><i class="zmdi zmdi-vimeo"></i></a></li>
                        <li><a href="@Model.Contacts.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-8">
                <div class="skill-area">
                    <h4>skills</h4>
                </div>
                <div class="skill-wrapper">
                    <div class="row">
                        @foreach (var item in Model.Skills)
                        {
                        <div class="col-sm-4">
                            <div class="skill-bar-item">
                                <span>@item.Name</span>
                                <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @(item.Level)%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                        <span class="text-top">@(item.Level)%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                            
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Teacher End -->